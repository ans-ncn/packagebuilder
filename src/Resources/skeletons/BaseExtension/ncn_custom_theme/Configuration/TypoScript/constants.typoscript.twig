    ### set frame variables
    frame-inner-spacing = 4.5rem

    ### set footer variables
    footer-font-weight = 200 
    footer-background-color = $dark
    footer-color = #bcc0c4
    footer-link-color = $white
    footer-hover-color = darken($footer-link-color, 15%) 

    input-height-lg = 60px

    ### set btn variables
    btn-border-radius = 5px
    btn-box-shadow = none
    btn-font-size-lg = rem(18px)
    btn-font-weight = $font-weight-light
    btn-border-width = 1px

    ### set card variables
    card-border-width = 0px
    card-border-radius = 0
    card-spacer-y = 2rem
    card-spacer-x = 2rem
    card-box-shadow = none

    headerFrame.class = mb-4 

