###################
### BASE CONFIG ###
###################
config {
    themecode = {{ package.extensionKey }}
}

############
### PAGE ###
############
page {
    site {
        domain = {{ package.domain }}
        name = {{ package.websiteTitle }}
        defaultEmail = {{ package.defaultEmail }}
        defaultSenderName = {{ package.defaultSenderName }}
        defaultSenderEmail = {{ package.defaultSenderEmail }}
    }
    logo {
        file = EXT:{{ package.extensionKey }}/Resources/Public/Images/logo.svg
        fileInverted = EXT:{{ package.extensionKey }}/Resources/Public/Images/logo-inverted.svg
        height = {{ package.logoHeight }}
        width = {{ package.logoWidth }}
        alt = {{ package.websiteTitle }} Logo
        linktitle = {{ package.websiteTitle }} Startseite
    }
    favicon {
        file = EXT:{{ package.extensionKey }}/Resources/Public/Icons/favicon.ico
    }
    tracking {
        analytics {
            ua = {{ package.analyticsUA }}
            ga4 = {{ package.analyticsGA4 }}
        }
        facebook {
            pixel = {{ package.facebookPixel }}
        }
    }
    privacy {
        pageUid = 15
    }
  	theme{
        breadcrumb {
            enableLevel = 1
        }
        socialmedia.channels {
            facebook.url = 
            instagram.url = 
            xing.url = 
            youtube.url = 
        }
        service {
            enable = 1
            navigationValue = 
        }
        language {
            enable = 0
        }
        googleFont {
            enable = 1
            font = Open Sans
            weight = 300,400,500,600
        }
        fontAwesome {
            enable = 1
            id = 99d48d6a78
        }
        navigation.style = default-transition
    }
}


################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {

    ### color variables

    default = $light
    primary = #006eb7
    primary-light = rgba(0,110,183,0.6)
    secondary = $primary-light
    tertiary = #3278B3
    quaternary = #EFBD3F
    warning = #EDF445
    info = #000
    light = #F5F7F9
    dark = #252525
    grey = #707070
    grey-light = #BCBBB9
    grey-dark = #333333
    muted = #707070

    ### typografie variables

    // set default body sizes for breakpoints
    responsive-font-size = 16px
    responsive-font-size-lg = 16px
    responsive-font-size-xl = 16px

    // please set body font-sizes in rem
    font-size-base = 1rem
    font-size-tiny = $font-size-base * 0.775
    font-size-small = $font-size-base * 0.875
    font-size-large = $font-size-base * 1.125
    font-size-larger = $font-size-base * 1.25
    
    // please set heading-sizes in px
    h1-font-size = 36px
    h2-font-size = 30px
    h3-font-size = 24px
    h4-font-size = 21px
    h5-font-size = 18px

    font-weight-lighter = lighter
    font-weight-light = 300
    font-weight-normal = 400
    font-weight-medium = 500
    font-weight-bold = 700
    font-weight-bolder = bolder

    ### set body variables
    body-color = #0a0a0a
    body-bg = $white
    
    ### set headings variables
    headings-font-weight = $font-weight-bold
    headings-font-family = 'Montserrat',sans-serif
    headings-line-height = 1.2

    ### set lead variables
    lead-font-size = $font-size-larger
    lead-font-weight = $font-weight-light

    ### set navbar variables
